<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body>
<!-- Navbar -->
<%- include('layouts/navBar') -%>
<!-- Navbar -->

<main class="container text-center my-4 py-4">
    <h1 class="mb-4">Create A New Post</h1>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-10">
            <div>
                <form class="mb-5 mx-md-5" action="/store/post" method="post" enctype="multipart/form-data">

                    <div class="row">

                        <div class="col-md-12 mb-4">

                            <!-- Phone -->
                            <input type="text" name="title" class="form-control" placeholder="Blog Post Title">

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-4">

                            <!-- Subject -->
                            <input type="file" name="image" class="form-control" placeholder="Image" accept="image/*">

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group mb-4">
                                <textarea class="form-control rounded" name="body" rows="7" placeholder="Enter your blog message here"></textarea>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

</main>

<!--footer-->
<%- include('layouts/footer') -%>
<!-- footer -->

<%- include('layouts/scripts') -%>

</body>
</html>