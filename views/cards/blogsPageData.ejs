<style>
    .max {
        max-width: 17rem;
    }
    @media(max-width:768px){
        .max {
            max-width: none;
        }
    }
</style>

<!-- Container for demo purpose -->
<div class="container-fluid my-2">

    <!--Section: Design Block-->
    <h1 class="fw-bold h1 text-center">Latest Articles</h1>
    <section class="mb-10">

        <div class="d-flex justify-content-between align-items-center align-items-xl-end border-bottom pb-4 mb-5"
             style="border-bottom: 2px solid #f5f5f5 !important;">
<!--            <h1 class="fw-bold h1 text-center">Latest Articles</h1>-->
        </div>
        <div class="row row-cols-lg-auto justify-content-center align-items-center d-flex mx-auto text-center me-2 py-1">
            <% for(i=0; i < articles.length; i++){ %>
                <div class="card m-2 max">
                    <div>
                        <div class="bg-image hover-overlay hover-zoom ripple rounded-5 mb-4" data-mdb-ripple-color="light">
                            <img class="w-100" src="<%= articles[i].image %>"
                                 style="height: 227px; object-fit: cover;" alt="Image placeholder">
                            <a href="/post/<%= articles[i]._id %>">
                                <div class="mask" style="background-color: rgba(255,255,255,0.1);"></div>
                            </a>
                        </div>
                        <h6 class="text-muted text-uppercase small pb-1"><a href="#!" class="text-reset"><%= articles[i].title %></a></h6>
                        <h5 class="fw-bold mb-3">
                            <a href="#!" class="text-reset">
                               Posted on <%= articles[i].datePosted.toLocaleString() %> by <%= articles[i].userid.username %>
                            </a>
                        </h5>
                    </div>
                </div>
            <% } %>
        </div>

    </section>
    <!--Section: Design Block-->

</div>
<!-- Container for demo purpose -->