<div class="my-5">

    <!--Section: Design Block-->
    <section class="mb-10">
        <p class="fs-1 fw-bold text-center mb-5">Read the latest in...</p>
        <div class="
          d-flex
          justify-content-between
          align-items-center align-items-xl-end
          border-bottom
          pb-4
          mb-5
        " style="border-bottom: 2px solid #f5f5f5 !important">
            <h2 class="fw-bold mb-0">Design Blogs</h2>
            <h6 class="mb-0">
                <a href="/blogs">See All Articles <i class="fas fa-angle-right fa-xs ms-1"></i></a>
            </h6>
        </div>
        <div class="row gx-md-5">
        
            <% for(i=0; i < articles.length; i++){ %>
            <div class="col-md-3 col-lg-3 col-sm-12">
                <div class="mb-5 mb-lg-0">
                    <div class="bg-image hover-overlay hover-zoom ripple rounded-5 mb-4" data-mdb-ripple-color="light">
                        <img class="w-100 rounded-5" src="<%= articles[i].image %>"
                             style="height: 225px; object-fit: cover; object-position: top" alt="Image placeholder" />
                        <a href="/post/<%= articles[i]._id%>">
                            <div class="mask" style="background-color: rgba(255, 255, 255, 0.1)"></div>
                        </a>
                    </div>
                    <h6 class="text-muted text-uppercase small pb-1">
                        <a href="#!" class="text-reset"><%= articles[i].title %></a>
                    </h6>
                    <h5 class="fw-bold mb-3">
                        <a href="#!" class="text-reset">
                            <%= articles[i].body.substring(0, 110) %> . . .
                        </a>
                    </h5>
                </div>
            </div>
            <% } %>
        </div>
    </section>
    <!--Section: Design Block-->

</div>